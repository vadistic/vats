{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "es6",
    "target": "es6",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false, // for dev
    "noUnusedLocals": false, // for dev
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "skipLibCheck": true,
    "alwaysStrict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
