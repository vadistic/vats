{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "es6",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false, // for now
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false, // for dev
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/**/*", "scripts/make-schema.js", ".apollo.config.js", "scripts/apollo.config.js", "scripts/.apollo.config.js", "hidden.apollo.config.js"],
  "exclude": ["node_modules", "dist"]
}
