{
  "name": "server",
  "version": "0.1.0",
  "description": "GraphQL endpoint for ATS",
  "author": "Jakub Wadas <vadistic@gmail.com>",
  "license": "No license",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "env:cmd": "env-cmd .env",
    "env:pull": "shx cp ../../.env .env",
    "env:push": "shx cp .env ../../.env",
    "apollo:push": "apollo service:push",
    "now:deploy": "yarn env:cmd now && now alias",
    "prisma:deploy": "yarn env:cmd prisma deploy",
    "prisma:gen": "yarn env:cmd prisma generate",
    "gql:gen": "gql-gen --config codegen.yml",
    "codegen": "yarn prisma deploy && yarn prisma:gen && yarn gql:gen",
    "clean": "shx rm -rf dist",
    "graphql:copy": "shx cp -f src/generated/prisma.graphql dist/generated/prisma.graphql",
    "build": "yarn clean && tsc && yarn graphql:copy",
    "dev": "yarn env:cmd ts-node src/index.ts",
    "start": "node dist/index.js",
    "watch": "tsc -w",
    "test": "jest",
    "lint": "tslint --project .",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "apollo-server": "^2.1.0",
    "aws-sdk": "^2.318.0",
    "dayjs": "^1.7.5",
    "graphql": "^14.1.1",
    "graphql-import": "^0.7.1",
    "graphql-middleware": "^3.0.0",
    "graphql-shield": "^5.1.0",
    "graphql-tools": "^4.0.0",
    "graphql-upload": "^8.0.0",
    "jsonwebtoken": "^8.3.0",
    "jwks-rsa": "^1.3.0",
    "prisma-binding": "^2.1.6",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/faker": "^4.1.4",
    "@types/graphql": "^14.0.5",
    "@types/jest": "^23.3.2",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/node": "^10.12.18",
    "@types/ramda": "^0.25.38",
    "apollo": "^2.3.0",
    "dotenv": "^6.2.0",
    "env-cmd": "^8.0.2",
    "faker": "^4.1.0",
    "graphql-code-generator": "^0.16.0",
    "graphql-codegen-introspection": "^0.16.0",
    "graphql-codegen-typescript-common": "^0.16.0",
    "graphql-codegen-typescript-resolvers": "^0.16.0",
    "graphql-codegen-typescript-server": "^0.16.0",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "prisma": "^1.16.4",
    "shx": "^0.3.2",
    "ts-jest": "^23.10.0",
    "ts-node": "^8.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  }
}
