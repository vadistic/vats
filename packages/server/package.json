{
  "name": "server",
  "version": "0.1.0",
  "description": "GraphQL endpoint for ATS",
  "author": "Jakub Wadas <vadistic@gmail.com>",
  "license": "No license",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "graphql": "env-cmd ../../.env prisma deploy",
    "playground": "graphql playground",
    "dev": "env-cmd ../../.env ts-node src/index.ts",
    "deploy": "now -E ../../.env && now alias",
    "clean": "shx rm -rf dist",
    "copy:graphql": "shx cp -f src/generated/prisma.graphql dist/generated/prisma.graphql && shx cp -f src/generated/server.graphql dist/generated/server.graphql",
    "build": "yarn clean && tsc && yarn copy:graphql",
    "start": "node dist/index.js",
    "watch": "tsc -w",
    "test": "jest"
  },
  "dependencies": {
    "apollo-server": "^2.0.7",
    "axios": "^0.18.0",
    "dayjs": "^1.7.5",
    "graphql": "^14.0.2",
    "graphql-import": "^0.6.0",
    "graphql-middleware": "^1.7.2",
    "graphql-shield": "^3.2.1",
    "jsonwebtoken": "^8.3.0",
    "jwk-to-pem": "^2.0.0",
    "jwks-rsa": "^1.3.0",
    "prisma-binding": "^2.1.5",
    "ramda": "^0.25.0",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/ramda": "^0.25.37",
    "@types/request": "^2.47.1",
    "env-cmd": "^8.0.2",
    "prisma": "^1.16.0",
    "shelljs": "^0.8.2",
    "shx": "^0.3.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3"
  }
}
