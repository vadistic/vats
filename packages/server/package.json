{
  "name": "server",
  "version": "0.1.0",
  "description": "GraphQL endpoint for ATS",
  "author": "Jakub Wadas <vadistic@gmail.com>",
  "license": "No license",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "env": "env-cmd .env",
    "apollo:push": "apollo service:push",
    "now:deploy": "yarn env now && now alias",
    "prisma:deploy": "yarn env prisma deploy",
    "gen:prisma:client": "yarn env prisma generate",
    "gen:prisma:binding": "yarn env graphql codegen",
    "gen:prisma": "yarn gen:prisma:client && yarn gen:prisma:binding",
    "gen:server:sdl": "ts-node scripts/server-sdl",
    "gen:server:ts": "gql-gen --config codegen.yml",
    "gen:server": "yarn gen:server:sdl && yarn gen:server:ts",
    "gen": "yarn gen:prisma && yarn gen:server",
    "clean": "rm -rf dist",
    "graphql:copy": "cp -f src/generated/prisma.graphql dist/generated/prisma.graphql",
    "build": "yarn clean && tsc && yarn graphql:copy",
    "dev": "yarn env:cmd ts-node src/index.ts",
    "start": "node dist/index.js",
    "watch": "tsc -w",
    "test": "jest",
    "lint": "tslint --project .",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "apollo-server": "^2.1.0",
    "aws-sdk": "^2.393.0",
    "dayjs": "^1.7.5",
    "graphql": "^14.1.1",
    "graphql-import": "^0.7.1",
    "graphql-middleware": "^3.0.0",
    "graphql-shield": "^5.1.0",
    "graphql-tools": "^4.0.4",
    "graphql-upload": "^8.0.0",
    "jsonwebtoken": "^8.3.0",
    "jwks-rsa": "^1.3.0",
    "prisma-binding": "^2.1.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/faker": "^4.1.4",
    "@types/graphql": "^14.0.5",
    "@types/jest": "^23.3.2",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/node": "^10.12.20",
    "@types/ramda": "^0.25.38",
    "apollo": "^2.4.1",
    "dotenv": "^6.2.0",
    "env-cmd": "^8.0.2",
    "faker": "^4.1.0",
    "graphql-cli": "^3.0.8",
    "graphql-code-generator": "^0.16.0",
    "graphql-codegen-introspection": "^0.16.0",
    "graphql-codegen-typescript-common": "^0.16.0",
    "graphql-codegen-typescript-resolvers": "^0.16.0",
    "graphql-codegen-typescript-server": "^0.16.0",
    "jest": "^24.0.0",
    "prettier": "^1.16.3",
    "prisma": "^1.25.4",
    "ramda": "^0.26.1",
    "ts-jest": "^23.10.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  }
}
