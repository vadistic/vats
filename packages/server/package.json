{
  "name": "server",
  "version": "0.1.0",
  "description": "GraphQL endpoint for ATS",
  "author": "Jakub Wadas <vadistic@gmail.com>",
  "license": "No license",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "env:cmd": "env-cmd ../../.env",
    "env:pull": "shx cp ../../.env .env",
    "env:push": "shx cp .env ../../.env",
    "prisma:deploy": "env-cmd ../../.env prisma deploy",
    "playground": "graphql playground",
    "dev": "yarn env:cmd ts-node src/index.ts",
    "now:deploy": "yarn env:cmd now && now alias",
    "clean": "shx rm -rf dist",
    "graphql:copy": "shx cp -f src/generated/prisma.graphql dist/generated/prisma.graphql && shx cp -f src/generated/server.graphql dist/generated/server.graphql",
    "build": "yarn clean && tsc && yarn graphql:copy",
    "start": "node dist/index.js",
    "watch": "tsc -w",
    "test": "jest"
  },
  "dependencies": {
    "apollo-server": "^2.1.0",
    "aws-sdk": "^2.318.0",
    "dayjs": "^1.7.5",
    "graphql": "^14.0.2",
    "graphql-import": "^0.7.1",
    "graphql-middleware": "^1.7.2",
    "graphql-shield": "^3.2.2",
    "graphql-tools": "^4.0.0",
    "graphql-upload": "^8.0.0",
    "jsonwebtoken": "^8.3.0",
    "jwks-rsa": "^1.3.0",
    "prisma-binding": "^2.1.6",
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/faker": "^4.1.4",
    "@types/jest": "^23.3.2",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/node": "^10.10.1",
    "@types/ramda": "^0.25.38",
    "env-cmd": "^8.0.2",
    "faker": "^4.1.0",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "prisma": "^1.16.4",
    "shx": "^0.3.2",
    "ts-jest": "^23.10.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  }
}
