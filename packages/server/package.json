{
  "name": "server",
  "version": "0.1.0",
  "description": "GraphQL endpoint for ATS",
  "author": "Jakub Wadas <vadistic@gmail.com>",
  "license": "No license",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "env": "node ./scripts/env-cli",
    "apollo:push": "apollo service:push",
    "prisma:deploy": "yarn env prisma deploy",
    "gen:prisma:client": "yarn env prisma generate",
    "gen:prisma:binding": "yarn env graphql codegen",
    "gen:prisma": "yarn gen:prisma:client && yarn gen:prisma:binding",
    "gen:server:sdl": "ts-node scripts/server-sdl",
    "gen:server:ts": "gql-gen --config codegen.yml",
    "gen:server": "yarn gen:server:sdl && yarn gen:server:ts",
    "gen": "yarn gen:prisma && yarn gen:server",
    "graphql:copy:prisma": "cp -f src/generated/prisma.graphql dist/generated/prisma.graphql",
    "graphql:copy:server": "cp -f src/generated/server.graphql dist/generated/server.graphql",
    "graphql:copy": "yarn graphql:copy:prisma && yarn graphql:copy:server",
    "clean": "rm -rf dist",
    "build": "yarn clean && tsc && yarn gen:server:sdl && yarn graphql:copy",
    "now:json": "node scripts/now-json",
    "now:deploy": "yarn now:json && now deploy && now alias",
    "dev": "yarn env ts-node src/index.ts",
    "now-start": "NODE_ENV=\"development\" node dist/index.js",
    "watch": "tsc -w",
    "test": "jest",
    "lint": "tslint --project .",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "apollo-server": "^2.4.0",
    "aws-sdk": "^2.401.0",
    "dayjs": "^1.8.5",
    "gql-import": "vadistic/gql-import#gql-import-v0.1.2-gitpkg",
    "graphql": "^14.1.1",
    "graphql-import": "^0.7.1",
    "graphql-middleware": "^3.0.2",
    "graphql-shield": "^5.1.3",
    "graphql-tools": "^4.0.4",
    "graphql-upload": "^8.0.0",
    "jsonwebtoken": "^8.3.0",
    "jwks-rsa": "^1.4.0",
    "prisma-binding": "^2.3.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/faker": "^4.1.4",
    "@types/graphql": "^14.0.6",
    "@types/jest": "^24.0.3",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/node": "^11.9.3",
    "@types/ramda": "^0.25.49",
    "apollo": "^2.4.4",
    "cross-spawn": "^6.0.5",
    "dotenv": "^6.2.0",
    "faker": "^4.1.0",
    "graphql-cli": "^3.0.9",
    "graphql-code-generator": "^0.16.1",
    "graphql-codegen-introspection": "^0.16.1",
    "graphql-codegen-typescript-common": "^0.16.1",
    "graphql-codegen-typescript-resolvers": "^0.16.1",
    "graphql-codegen-typescript-server": "^0.16.1",
    "jest": "^24.1.0",
    "prettier": "^1.16.4",
    "prisma": "^1.26.4",
    "ramda": "^0.26.1",
    "ts-jest": "^23.10.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3"
  },
  "resolutions": {
    "graphql": "14.1.1"
  }
}
