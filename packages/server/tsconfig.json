{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "dist",
    "lib": ["esnext"],
    // modules
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // strict
    "strict": true,
    "noImplicitReturns": true,
    // less strict
    "noUnusedLocals": false, // dev
    "noUnusedParameters": false,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/node_modules/**", "dist"]
}
